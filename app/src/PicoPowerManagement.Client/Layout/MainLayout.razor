@inherits LayoutComponentBase
<FluentLayout Style="width:800px; height:480px; border: solid 1px #000">
    <FluentHeader></FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%" Style="height:100%">
        <FluentNavMenu Style="width:20%">
            <FluentNavLink Href="/" Icon="@(new Icons.Regular.Size24.Home())">Home</FluentNavLink>
            <FluentNavLink Href="fans" Icon="@(new Icons.Regular.Size24.Doctor())">Fans</FluentNavLink>
        </FluentNavMenu>
        <FluentBodyContent Style="height:100%;">
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>
